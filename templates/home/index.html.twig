{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block header %}
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('Asset/css/home.css') }}">
{% endblock %}

{% block title %}Accueil{% endblock %}

{% block body %}
    {# En-tête de la page avec logo, menu de navigation, et actions utilisateur #}
    <header>
        <div class="container">
            <div class="logo">
                <img src="{{ asset('images/logo.png') }}" alt="Logo de Votre Entreprise">
            </div>
            <div class="user-actions">
                <a href="{{ path('app_login') }}" class="btn btn-primary">Se Connecter</a>
                <a href="{{ path('app_register') }}" class="btn btn-secondary">S'Inscrire</a>
            </div>
            <nav>
                <ul>
                    <li><a href="#">Accueil</a></li>
                    <li><a href="#">Boutique</a></li>
                    <li><a href="#">Suivi des Colis</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    {# Bannière principale présentant les services #}
    <section class="banner">
        <div class="container">
            <h1>Bienvenue sur Notre Service de Transport de Colis</h1>
            <p>Découvrez notre service de transport fiable et rapide vers la Mauritanie et le Sénégal.</p>
            <a href="#" class="btn btn-primary">Envoyer un Colis</a>
            <a href="#" class="btn btn-secondary">Suivre un Colis</a>
        </div>
    </section>

    {#section banniere(2)#}
<section class="second-banner">
    <div class="container">
    </div>
</section>
            {#Section boutique#}

        <section class="boutique">
    <div class="container">
        <h2>Nos Chaussures</h2>
        <div class="products">
            <div class="product">
                <img src="{{ asset('images/CH4.jpg') }}" alt="Chaussure 1">
                <h3>Chaussure élégante</h3>
                <p>Chaussure élégante pour toutes les occasions. Confortable et stylée.</p>
                <span class="price">Prix : 59,99 €</span>
                <a href="#" class="btn btn-primary">Acheter</a>
            </div>
            <div class="product">
                <img src="{{ asset('images/SHOES1.jpg') }}" alt="Chaussure 2">
                <h3>Baskets à la mode</h3>
                <p>Baskets légères, idéales pour le quotidien. Confortables et à la mode.</p>
                <span class="price">Prix : 49,99 €</span>
                <a href="#" class="btn btn-primary">Acheter</a>
            </div>
            <div class="product">
                <img src="{{ asset('images/SHOES2.jpg') }}" alt="Chaussure 3">
                <h3>Chaussure de sport</h3>
                <p>Chaussure de sport haute performance. Conçue pour l'endurance et le confort.</p>
                <span class="price">Prix : 79,99 €</span>
                <a href="#" class="btn btn-primary">Acheter</a>
            </div>
            <div class="product">
                <img src="{{ asset('images/SHOES3.jpg') }}" alt="Chaussure 4">
                <h3>Sandales estivales</h3>
                <p>Sandales confortables et stylées pour l'été. Idéales pour les vacances.</p>
                <span class="price">Prix : 39,99 €</span>
                <a href="#" class="btn btn-primary">Acheter</a>
            </div>
        </div>
    </div>
</section>


{# Section de suivi des colis #}

