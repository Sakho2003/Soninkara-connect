    <div class="container">
        <h2>Suivi des Colis</h2>

        <div class="tracking-details">
            <div class="tracking-item">
                <h3>Colis 1</h3>
                <p>Statut : En attente de livraison</p>
                <p>Lieu : Dépôt central</p>
                <p>Estimation de livraison : 25 Novembre 2023</p>
            </div>

            <div class="tracking-item">
                <h3>Colis 2</h3>
                <p>Statut : En transit</p>
                <p>Lieu : En route vers la destination</p>
                <p>Estimation de livraison : 27 Novembre 2023</p>
            </div>
            
            <!-- Autres colis -->
            <div class="tracking-item">
                <h3>Colis 3</h3>
                <p>Statut : Livré</p>
                <p>Lieu : Destinataire</p>
                <p>Date de livraison : 22 Novembre 2023</p>
            </div>
            
            <div class="tracking-item">
                <h3>Colis 4</h3>
                <p>Statut : En transit</p>
                <p>Lieu : En route vers le dépôt local</p>
                <p>Estimation de livraison : 29 Novembre 2023</p>
            </div>
        </div>
    </div>
</section>

